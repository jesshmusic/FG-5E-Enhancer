<?xml version="1.0" encoding="iso-8859-1"?>

<root version="3.1.4" release="1">

	<properties>
		<name>JessHMusic Custom Enhancements for 5E 3.1.4</name>
		<version>3.1.4</version>
		<description>
			<text>JessHMusic Custom Enhancements for 5E</text>
			<author>Jess Hendricks</author>
		</description>
		<loadorder>78</loadorder>
		<ruleset>
			<name>5E</name>
		</ruleset>
	</properties>

	<base>
		<script name="ColorManagerCustom" file="scripts/manager_color_custom.lua" />

		<!-- XML file containing new strings -->
		<includefile source="strings/jesshmusic_Strings.xml" />

		<!-- XML file containing new images -->
		<includefile source="graphics/graphics_icons.xml" />

		<!-- Join Character Main Sheet -->
		<includefile source="campaign/record_char_main.xml" />

		<!--updates the combat tracker to include the total HP for the host-->
		<includefile source="ct/ct_host.xml" />

		<!--updates the client combat tracker to include the total HP-->
		<includefile source="ct/ct_client.xml" />

		<!-- Encounter Window -->
		<includefile source="JH/tools_JH.xml"/>
		<includefile source="JH/graphics_JH.xml"/>
		<includefile source="JH/strings_JH.xml"/>

		<!-- XML files that merge with existing xml -->
		<includefile source="campaign/record_encounter_JH.xml"/>

		<!--New scripts-->
		<script name="EnhancedEncounterWindowJH" file="campaign/scripts/enhanced_encounter_window_JH.lua" />
		<script name="EnhancedEncounterWindowStartJH" file="scripts/enhanced_encounter_window_start_JH.lua" />

		<!-- readycheck -->

    <script name="ConnectionManagerADND" file="scripts/manager_connection_adnd.lua" />

    <includefile source="utility/utility_readycheck.xml" />

		<!-- Window Save -->
		<script name="WindowSaveHost" file="scripts/window_save_host.lua" />
		<script name="WindowSaveCore" file="scripts/window_save_core.lua" />
		<script name="WindowSaveUtility" file="scripts/window_save_utility.lua" />
		<!-- Presented in alphabetic order of the .lua file in the /scripts folder -->

		<!-- actor_condition.lua: widgets to appear on top of tokens to reflect their condition -->
		<script name="ActorCondition" file="scripts/actor_condition.lua" />	<!-- Handles detecting and adding conditions as widgets to tokens -->

		<!-- health_bar.lua: Horizontal Health Bar and larger health dot -->
		<script name="HealthGraphicUpdater" file="scripts/health_graphics.lua" />
		<includefile source="graphics/graphics_icons.xml" />

		<!-- helper_functions.lua: Generic helper functions for the extension -->
		<script name="Helper" file="scripts/helper_functions.lua" />

		<!-- Override some base functions -->
		<script name="CombatManagerCustom" file="scripts/manager_combat_custom.lua" />

		<!-- manager_token_override.lua: code that overrides token manger CoreRPG ruleset code from manager_token.lua,
		handles horizontal health bar calling and token faction underlays -->
		<script name="TokenManagerOverride" file="scripts/manager_token_override.lua" />

		<!-- Adds menu items for the extension -->
		<script name="MenuItemRegister" file="scripts/menu_item_register.lua" />

		<!-- token_save_graphics: overriding 5E Ruleset manager_action_save.lua functions to draw save result graphics on tokens, after saving throw has been thrown-->
		<script name="TokenSaveGraphics" file="scripts/token_save_graphics.lua" />

		<!-- token_wheel_manager.lua: Height manager for tokens -->
		<script name="TokenWheelManager" file="scripts/token_wheel_manager.lua" />
		<includefile source="graphics/graphics_fonts.xml" />
    <script name="CustomSlashCommands" file="scripts/custom_slash_commands.lua" />

		<!-- 5E Enhancer Icon -->
		<includefile source="spell_automation.xml" />

		<script name="EffectManagerADND" file="scripts/manager_effect_adnd.lua" />
		<includefile source="utility/template_utility_advanced.xml" />
		<includefile source="utility/utility_effects_advanced.xml" />
		<includefile source="advanced_effects.xml" />
	</base>

	<announcement text="JessHMusic Custom Enhancements for 5E 3.1.4" font="emotefont" icon="ce_icon" />
</root>
